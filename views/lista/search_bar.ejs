<!-- Barra de busqueda para filtrar por titulo o autor -->

<div class="search-bar bg-light p-3 rounded mb-4">
    <h5 class="mb-3"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    <form action="/libros" method="GET" class="row g-3">
        <div class="col-md-5">
            <input type="text" class="form-control" name="titulo" placeholder="Título" value="{{ request.query.titulo }}">
        </div>
        <div class="col-md-5">
            <input type="text" class="form-control" name="autor" placeholder="Autor" value="{{ request.query.autor }}">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-search"></i> Buscar
            </button>
        </div>
    </form>
</div>